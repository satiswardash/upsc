<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <com.jackandphantom.circularimageview.CircleImage
        android:id="@+id/hc_comment_userProfileImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_user_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/rectangle_round_corner_solid"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@+id/hc_profileImage_imageView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hc_comment_userProfileNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorTextRegular"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem" />

        <TextView
            android:id="@+id/hc_comment_userCommentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:maxLines="1"
            android:textColor="@color/colorTextRegular"
            android:textSize="11sp"
            tools:text="@tools:sample/lorem/random" />
    </LinearLayout>
</LinearLayout>