<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/branding_textView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_solid_colorsecondary"
        android:fontFamily="@font/lobster_regular"
        android:gravity="center"
        android:text="@string/branding"
        android:textColor="@color/colorTextRegular"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/oc_question_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lobster_regular"
        android:text="@string/dummy_text_short"
        android:textAlignment="viewStart"
        android:textColor="@color/colorTextRegular"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/branding_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/oc_option_selection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oc_question_textView">

        <RadioButton
            android:id="@+id/oc_option01_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />

        <RadioButton
            android:id="@+id/oc_option02_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />

        <RadioButton
            android:id="@+id/oc_option03_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />

        <RadioButton
            android:id="@+id/oc_option04_radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem" />
    </RadioGroup>

</android.support.constraint.ConstraintLayout>